<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".MaintainStudent">


    <Button
        android:id="@+id/idStudentList"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".25"

        android:background="@drawable/button_layout2"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="Student List"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:drawableTop="@drawable/image_maintain_student"

        android:onClick="VviewStudent"

        />


    <Button
        android:id="@+id/idAddStudent"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25"

        android:background="@drawable/button_layout2"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="Add Student"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:drawableTop="@drawable/image_student_list"

        />


    <Button
        android:id="@+id/idUpdateStudent"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7"

        android:background="@drawable/button_layout2"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="Update Student"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:drawableTop="@drawable/image_update_schedule"

        />


    <Button
        android:id="@+id/idRemoveStudent"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7"

        android:background="@drawable/button_layout2"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="Remove Student"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:drawableTop="@drawable/image_delete_schedule"

        />

    <Button
        android:id="@+id/idResetStatus"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_layout2"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="Reset Status"

        android:textColor="#ffffff"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.956"

        />

</android.support.constraint.ConstraintLayout>